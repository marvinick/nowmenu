<%= render "layouts/navbar" %>

<div class="container">

  <div class="card p-2 m-2 border-0 text-center">

    <small><%= link_to "exit", project_path(@project), class: "exit-text" %></small>

    latest activity for project <h3 class="font-weight-bold"><%= @project.name %></h3>
  </div>
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <div class="card p-4 shadow">
        <% if @activities.present? %>
          <%= render_activities @activities %>
        <% end %>
      </div>
    </div>
    <div class="col-md-2"></div>
  </div>
</div>
