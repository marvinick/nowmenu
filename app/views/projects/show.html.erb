<div class="row">
  <div class="col-md-8">
    <small><%= link_to "projects", projects_path(@projects) %></small>
    <h2 class="font-weight-bold mb-0"><%= @project.name %></h2>
    <small>

      <%= link_to "edit", edit_project_path(@project) %>
      <%= link_to "delete", project_path(@project), :method => :delete, data: {confirm: "Are you sure?"} %>
    </small>

    <div class="row">
      <% @project.categories.each do |category| %>
          <div class="card py-0 px-2 my-1 mx-2 rounded">
            <li><p class="inline-text"><%= category.name %></p></li>
          </div>
      <% end %>
    </div>

    <h6 class=" mt-3">Items</h6>
    <small><%= link_to "add item", new_project_item_path(@project, @item) %></small>

    <% link_to "Menu", project_items_path(@project, @items) %>


    <% @project.items.each do |item| %>
      <%= link_to project_item_path(@project, item) do %>
      <div class="card my-3 mx-0 p-3 shadow-sm">
        <li><%= item.title %></li>
      </div>
      <% end %>
    <% end %>

  </div>

  <div class="col-md-4">
    <div class="card">
      <div class="card-body">
        <p class="font-weight-bold">
          Members
          <small class="text-center">
              <a data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
                  Invite
              </a>
          </small>
          <div class="collapse" id="collapseExample">
            <%= simple_form_for [@project, ProjectUser.new] do |f| %>
              <div class="card card-body">
                  <%= f.input :email, placeholder: "email", label: false %>
                  <%= f.submit "Invite", class: "btn btn-xs btn-primary" %>
              </div>
            <%  end %>
          </div>
        </p>

        <div class="row text-center">
          <% @project.users.each do |user| %>
          <div class="card py-0 px-2 m-2 rounded">
              <li class="inline-li"><p class="inline-text"><%= user.email %></p></li>
            </div>
          <% end %>
        </div>


      </div>
    </div>
  </div>
</div>
