<%= render "layouts/navbar" %>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <small><%= link_to "projects", projects_path(@projects), class: "exit-text font-weight-" %></small>
      <br />
      <div class="float-md-left">
        <p class="page-title"><%= @project.name %></p>
        <small>Remember, your items need to have categories, for your users to review them. And also don't forget to group them.</small>
      </div>
      <div class="float-md-right">
        <%= link_to "edit", edit_project_path(@project), class: "btn btn-outline-secondary btn-sm" %>

        <%= link_to "Preview", preview_project_path(@project), class: "btn btn-sm btn-outline-secondary" %>
      </div>
    </div>
  </div>

  <br />
  <br />

  <div class="row ">
    <div class="col-md-3 col-6 mb-4">
      <%= link_to project_items_path(@project, @items) do %>
        <div class="card shadow p-3 h-100">
          <h6 class="font-weight-bold text-center mb-0 ">Items</h6>
          <hr />

          <% @project.items.last(4).each do |item| %>
            <div class="py-1 px-2 border-0 ">
              <small class="font-weight-bold card-text no-underline"><%= truncate(item.title, length: 15) %></small>
              <small><%= truncate(item.content, length: 20) %></small>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="col-md-3 col-6 mb-4">
      <%= link_to project_groups_path(@project, @groups) do %>
        <div class="card shadow  p-3 h-100">
          <h6 class="font-weight-bold text-center mb-0">Groups</h6>
          <hr />

          <% @project.groups.last(4).each do |group| %>
            <div class="py-1 px-2 border-0 ">
              <small class="font-weight-bold card-text"><%= group.name %> </small>
              <small><%= truncate(group.description, length: 20) %></small>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="col-md-3 col-6 mb-4">
      <%= link_to project_categories_path(@project, @categories) do %>

        <div class="card shadow p-3 h-100">
          <h6 class="font-weight-bold text-center mb-0">Categories</h6>
          <hr />

          <% @project.categories.last(4).each do |category| %>
              <div class="card py-1 px-2 border-0">
                <small class="font-weight-bold card-text"><%= category.name %> </small>
                <small><%= truncate(category.description, length: 20) %></small>
              </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="col-md-3 col-6 mb-4">
      <%= link_to project_project_users_path(@project, @users) do %>
        <div class="card shadow p-3 h-100">
          <h6 class="font-weight-bold text-center mb-0">Members</h6>
          <hr />
          <% @project.users.each do |user| %>
            <div class="card py-1 px-2 border-0 ">
              <small class="font-weight-bold card-text"><%= truncate((user.email).chomp("gmail"), length: 12) %></small>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

  </div>

  <br class="m-5">

  <div class="row">
    <div class="col-md-6 mb-4">
      <%= link_to  project_requests_path(@project, @requests) do %>

        <div class="card p-3 h-100">
          <div class="row">
            <div class="float-left">
                <%= image_tag 'chat', class: "icon-image mx-3" %>
            </div>

            <div class="float-right ">
              <h6 class="font-weight-bold mb-0">Requests</h6>
              <small>See the list of people that are still want make a </small>

            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-md-6 mb-4 ">
      <%= link_to load_activities_project_path(@project) do %>
        <div class="card p-3 h-100">
          <div class="row">

              <div class="float-left">
                <%= image_tag 'address-book-100', class: "icon-image  mx-3" %>
              </div>
              <div class="float-right ">
                <h6 class="font-weight-bold mb-0 ">Activities</h6>
                <small> See what's been happening lately</small>
              </div>
        </div>
      <% end %>
    </div>
  </div>

  <hr class="m-3">


    <div class="col-md-12">
      <div class="card p-5 shadow-sm">
        <h5 class="font-weight-bold mb-0">MAQs - most asked questions   </h5>
        <small>documentation where everyone can benefit from</small>

        <br />
        <br />

