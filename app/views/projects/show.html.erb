<div class="uk-margin-top">
    <h2>
        <%= @project.name %>
        <%= link_to "edit", edit_project_path(@project), class: "uk-button uk-button-secondary" %>
        <%= link_to "Delete", project_path(@project), :method => :delete, class: "uk-button uk-button-danger" %>
    </h2>
    
    <h4>Categories</h4>
    <% @project.categories.each do |category| %>
        <li><h6><%= category.name %></h6></li>
    <% end %>

    <hr>
    <h4>
        Items
        <%= link_to "+", new_project_item_path(@project, @item), class: "uk-button uk-button-primary" %>
    </h4>

    <% @project.items.each do |item| %>
        <li><%= link_to item.title, project_item_path(@project, item) %></li>        
    <% end %>
    <hr>

    <h4>Invite User</h4>
    <%= form_for [@project, ProjectUser.new] do |f| %>
    <div>
        <%= f.text_field :email, required: true %>
    </div>
    <%= f.submit "Invite" %>
    <%  end %>
    <br /> 
    <h4>Users</h4>
    <% @project.users.each do |user| %>
        <div><%= user.email %></div>
    <% end %>
    <hr>
    <%= link_to "back", root_path %>
</div>