<div class="d-flex bd-highlight justify-content-md-center align-items-center">

    <div class="col-xl-7 col-lg-12 col-md-12 col-sm-12 p-2 bd-highlight">

      <div class="card mx-0 shadow-sm border-bottom-0">
        <div class="card-body">
          <div class="text-center">
            <h4 class="font-weight-bold mb-0"><%= @project.name %></h4>
            <small><%= link_to "edit", edit_project_path(@project) %></small>
            <small><%= link_to "delete", project_path(@project), :method => :delete, data: {confirm: "Are you sure?"} %></small>
          </div>

          <div class="row my-2 text-center">
              <% @project.categories.each do |category| %>
                  <div class="card py-0 px-2 my-1 mx-2 rounded">
                    <li><p class="inline-text"><%= category.name %></p></li>
                  </div>
              <% end %>
          </div>

          <br />
          <br />

          <div class="  text-center">
            <h6 class="text-center mb-0">members</h6>
            <small class="text-center">
                <a data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
                    Invite
                </a>
            </small>
            <div class="collapse" id="collapseExample">
              <%= simple_form_for [@project, ProjectUser.new] do |f| %>
                <div class="card card-body">
                    <%= f.input :email, placeholder: "email", label: false %>
                    <%= f.submit "Invite", class: "btn btn-xs btn-primary" %>
                </div>
              <%  end %>
            </div>
          </div>

          <div class="row text-center">
            <% @project.users.each do |user| %>
            <div class="card py-0 px-2 m-2 rounded">
                <li class="inline-li"><p class="inline-text"><%= user.email %></p></li>
              </div>
            <% end %>
          </div>

          <br />
          <br />

          <div class="text-center">
            <h6 class="text-center mb-0">Items</h6>
            <small><%= link_to "add item", new_project_item_path(@project, @item) %></small>
          </div>
          <!-- <%= link_to "Menu", project_items_path(@project, @items), class: "btn btn-sm btn-success" %> -->


          <% @project.items.each do |item| %>
            <%= link_to project_item_path(@project, item) do %>
            <div class="card my-3 mx-0 p-3">
              <li><%= item.title %></li>
            </div>
            <% end %>
          <% end %>

        </div>
      </div>
    </div>



</div>
