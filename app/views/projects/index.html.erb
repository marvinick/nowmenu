<div class="text-center my-4">
  <h4 class="font-weight-bold">Projects</h4>
  <h6 class="mt-0"><small><%= link_to "add", new_project_path(@project) %></small></h6>
</div>

<div class="row mx-1">
  <% @projects.each do |project| %>
  <div class="col-md-6 col-sm-4">
    <%= link_to project_path(project) do %>
      <div class="card">
          <div class="card-body">
              <%= project.name %>
          </div>
      </div>
      <br />
    <% end %>
  </div>
  <% end %>
</div>
