
<div class="card p-2 m-2 border-0 text-center">
  <small><%= link_to "exit preview", project_path(@project), class: "exit-text" %></small>
  <br />
  <h3 class="font-weight-bold"><%= @project.name %></h3>
</div>

<div class="row">

  <div class="col-md-2"></div>
  <div class="col-md-8">
    <div class="card shadow p-3 mt-3">
    <div data-controller="clipboard" >
      <input data-target="clipboard.source" type="text" value="<%= request.original_url %>" readonly>
      <button data-action="clipboard#copy" class="btn btn-success">Copy to Clipboard</button>
    </div>
    </div>
    <div data-controller="slideshow" data-slideshow-index="1">
      <button data-action="slideshow#previous">‚Üê</button>
      <button data-action="slideshow#next">‚Üí</button>

      <div data-target="slideshow.slide" class="slide">üêµ</div>
      <div data-target="slideshow.slide" class="slide">üôà</div>
      <div data-target="slideshow.slide" class="slide">üôâ</div>
      <div data-target="slideshow.slide" class="slide">üôä</div>
    </div>
    <hr />
    <br />
    <br />
    <% @groups.order('name ASC').each do |group| %>
      <% cache group do %>
        <li>
          <h6 class="font-weight-bold"><%= group.name %></h6>
        </li>
        <% group.items.order('title').each do |item| %>
          <% cache item do %>
            <div class="table-responsive">
              <table class="table table-sm table-borderless">
                <thead>
                  <tr>
                    <th scope="col" style="width: 80%"></th>
                    <th scope="col" style="width: 20%"></th>
                  </tr>
                </thead>
                <tbody>
                  <tr class="h-50">
                    <td><small><%= link_to item.title, project_item_path(@project, item) %></small></td>
                    <td><small><%= item.price %></small></td>
                  </tr>
                </tbody>
              </table>
            </div>
          <% end %>
        <% end %>
        <br />
      <% end %>
    <% end %>



  </div>
  <div class="col-md-2"></div>
</div>
