<%= render "projects/project_navbar" %>

<div class="container pt-5">

  <div class="text-center">
    <p class="content"><%= link_to "exit", project_path(@project), class: "exit-text" %></p>

    <h4 class="font-weight-bold">Users</h4>
    <small class="form-text text-muted mb-3">
      These are your people
    </small>
    <%= link_to "Invite", new_project_project_user_path(@project, @project_user), class: "btn btn-outline-secondary btn-sm" %>
  </div>

  <br />

  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
    <% @project.users.each do |user| %>

      <div class="card py-3 px-3 border-0 shadow">
        <small class="inline-text"><%= user.email %></small>
      </div>
      <br />
    <% end %>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>
