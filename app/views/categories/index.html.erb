<%= render "projects/project_navbar" %>

<div class="container">

  <div class="text-center">
    <small><%= link_to "exit", project_path(@project), class: "exit-text" %></small>
    <h4 class="font-weight-bold">Categories</h4>
    <small class="form-text text-muted">
      These categories will be part of every review for each item
    </small>
    <br />
    <%= link_to "add category", new_project_category_path(@project, @category), class: "btn btn-outline-secondary btn-sm" %>
  </div>
  <br />

  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <div class="card p-4 shadow">
        <% if @categories.present? %>
          <%= render "categories" %>
        <% else %>
        <small class="">"They are words that are easy enough to say and which fill vast empty spaces."</small>
        <br />
        <br />
        <%= image_tag 'getting-there' %>
        <% end %>
      </div>
    </div>
    <div class="col-md-2"></div>
  </div>
</div>
