<div class="text-center">
  <small><%= link_to "#{@project.name}", project_path(@project) %></small>
  <h4 class="font-weight-bold">Categories</h4>
  <small class="form-text text-muted">
    These categories will be part of every review for each item
  </small>
  <br />
  <%= link_to "add category", new_project_category_path(@project, @category), class: "btn btn-outline-secondary btn-sm" %>
</div>
<br />

<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
  <% @categories.each do |category| %>

      <div class="card beige-bg py-3 px-3 border-0 shadow">
        <small><%= category.name %></small>

        <small class="text-muted"><%= category.description %></small>
        <hr />
        <small >
          <%= link_to "edit", edit_project_category_path(@project, category), class: "btn btn-outline-secondary btn-sm" %>
          <%= link_to "delete", project_category_path(@project, category), :method => :delete, data: {confirm: "Are you sure?"}, class: "btn btn-outline-secondary btn-sm" %>
        </small>
      </div>
      <br />


  <% end %>
  </div>
  <div class="col-md-3"></div>
</div>
