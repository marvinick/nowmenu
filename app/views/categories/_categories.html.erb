<% @categories.each do |category| %>
  <% cache category do %>
    <div data-controller="delete">
        <div class="row">
          <div class="col-md-10 col-12">
            <h6 class="font-weight-bold mb-0"><%= category.name %></h6>
            <small><%= category.description %></small>
          </div>
          <div class="col-md-2">
            <%= link_to edit_project_category_path(@project, category) do %>
              <small><i class="fas fa-pencil-alt"></i></small>
            <% end %>
            <%= link_to project_category_path(@project, category), method: :delete, remote: true, data: { target: "delete.link", action: "ajax:beforeSend->delete#click" } do %>
              <small><i class="fa fa-trash"></i> </small>
            <% end %>
          </div>
        </div>
    </div>
  <% end %>
  <hr class="my-4" />
<% end %>
