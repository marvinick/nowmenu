<% @categories.each do |category| %>
  <% cache category do %>
  <div data-controller="delete">
    <div class="card py-3 px-3 border-0 shadow">
      <div class="row">
        <div class="col-md-8 col-10">
          <small class="font-weight-bold"><%= category.name %></small>
          <br />
          <p class="description mb-0"><%= category.description %></p>
        </div>
        <div class="col-md-4 col-2">
            <p class="description mb-0"><i class="fas fa-pencil-alt"></i><%= link_to "     edit", edit_project_category_path(@project, category) %></p>
            <p class="description mb-0"><i class="fa fa-trash"></i> <%= link_to "  delete", project_category_path(@project, category), method: :delete, remote: true, data: { target: "delete.link", action: "ajax:beforeSend->delete#click" } %></p>

        </div>
      </div>
    </div>
  </div>
  <% end %>
<% end %>
