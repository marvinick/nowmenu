<div class="container pt-5 animated myElement rubberBand">

  <br />

  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <div class="float-left">
        <%= link_to project_items_path(@project, @items), class: "btn btn-outline-secondary btn-sm" do %>
          <i class="fas fa-times"></i>
        <% end %>
      </div>
      <br />
      <br />
      <h4 class="font-weight-bold ">Add  a new item</h4>
      <small class="form-text text-muted">
        These categories will be part of every review for each item
      </small>
      <div class="card my-4 border-0 ">

        <%= simple_form_for [@project, @item] do |f| %>

            <%= f.input :title, label: false, placeholder: "name" %>

            <br />
            <%= f.input :content, label: false, placeholder: "description" %>
            <br />
            <%= f.input :category, label: false, placeholder: "category" %>
            <br />
            <%= f.input :price, label: false, placeholder: "price" %>
            <br />
            <%= f.file_field :image %>
            <br />
            <br />
            <%= f.label "Groups: ", class: "item-title" %>
            <%= f.collection_check_boxes :group_ids, @project.groups.all, :id, :name do |cb| %>
              <% cb.label(class: "checkbox_inline") {cb.check_box(class: "checkbox") + cb.text} %>
            <% end %>
            <br />
            <br />
            <div class="float-right">
              <%= f.submit "create item", class: "btn btn-outline-secondary btn-sm", data: { disable_with: "Creating an item..." } %>
            </div>
        <% end %>
      </div>
    <div class="col-md-3"></div>
  </div>
  <br />
</div>
