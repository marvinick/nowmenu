<%= render "projects/project_navbar" %>

<div class="container pt-5">
  <div class="text-center">
    <%= link_to "exit", project_items_path(@project, @items),  class: "exit-text description" %>
    <h2 class="font-weight-bold">Items</h2>

  </div>

  <div class="row ">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <div class="card my-4 border-0 ">

        <br />

        <%= simple_form_for [@project, @item] do |f| %>

            <%= f.input :title, label: false, placeholder: "name" %>

            <br />
            <%= f.input :content, label: false, placeholder: "description" %>
            <br />
            <%= f.file_field :image %>
            <br />
            <br />
            <%= f.label "Groups: ", class: "item-title" %>
            <%= f.collection_check_boxes :group_ids, @project.groups.all, :id, :name do |cb| %>
              <% cb.label(class: "checkbox_inline") {cb.check_box(class: "checkbox") + cb.text} %>
            <% end %>
            <br />

            <%= link_to "cancel", project_path(@project), class: "btn btn-outline-secondary btn-sm" %>
            <%= f.submit "create item", class: "btn btn-outline-secondary btn-sm", data: { disable_with: "Creating item..." } %>
        <% end %>
      </div>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>
