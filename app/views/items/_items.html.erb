<% @items.each do |item| %>
  <div data-target="filter.filterable" data-filter-key='<%= "#{item.title} #{item.content}".downcase %>'>
    <% cache item do %>
      <%= link_to project_item_path(@project, item) do %>
        <div class="card shadow-sm p-4">
            <p class="each-item-title"><%= truncate(item.title, length: 20) %></p>
            <small><%= truncate(item.content, length: 150) %></small>
        </div>
      <% end %>
    <% end %>
    <br />
  </div>
<% end %>
