<div class="row">
  <% @items.each do |item| %>
    <div class="col-md-1"></div>
    <div class="col-md-10">
      <div data-target="filter.filterable" data-filter-key='<%= "#{item.title} #{item.content}".downcase %>'>
        <% cache item do %>
          <%= link_to project_item_path(@project, item) do %>
            <div class="card p-4 border-0 h-100">
                <p class="font-weight-bold"><%= truncate(item.title, length: 20) %></p>
                <small><%= truncate(item.content, length: 100) %></small>
            </div>
          <% end %>
        <% end %>
        <hr class="m-0"/>
      </div>
    </div>
    <div class="col-md-1"></div>
  <% end %>
</div>
