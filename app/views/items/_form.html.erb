<%= simple_form_for [@project, @item] do |f| %>
    <%= f.input :title, label: false, placeholder: "name" %>
    <%= f.input :content, label: false, placeholder: "description" %>
    <%= f.button :submit, class: "btn btn-primary" %>
    <%= link_to "cancel", :back, class: "btn btn-warning" %>
<% end %>