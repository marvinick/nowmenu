<div class="container pt-5 animated myElement rubberBand">

  <br />

  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <div class="float-left">
        <%= link_to project_groups_path(@project, @groups), class: "btn btn-outline-secondary btn-sm" do %>
          <i class="fas fa-times"></i>
        <% end %>
      </div>
      <br />
      <br />
      <h4 class="font-weight-bold ">Edit <%= "#{@group.name}" %></h4>
      <small class="form-text text-muted">
        These categories will be part of every review for each item
      </small>
      <div class="card my-4 border-0 ">

        <%= simple_form_for [@project, @group] do |f| %>
            <% f.hidden_field :project_id %>
            <%= f.input :name, label: false, placeholder: "name" %>

            <br />
            <%= f.input :description, label: false, placeholder: "description" %>
            <br />
            <div class="float-right">
              <%= f.submit "update this group", class: "btn btn-outline-secondary btn-sm", data: { disable_with: "updating group..." } %>
            </div>
        <% end %>
      </div>
    <div class="col-md-3"></div>
  </div>
  <br />
</div>
