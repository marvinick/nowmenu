<%= render "projects/project_navbar" %>

<div class="container pt-3">

  <div class="text-center">
    <small><%= link_to "exit", project_groups_path(@project, @groups), class: "exit-text " %></small>
    <h4 class="font-weight-bold">Groups</h4>
    <p class="content mb-0">Where each of your items belong to</p>
  </div>

  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <div class="card my-4 border-0 ">

        <%= simple_form_for [@project, @group] do |f| %>
          <% f.hidden_field :project_id %>
          <%= f.input :name, label: false, placeholder: "name" %>
          <br />
          <%= f.input :description, label: false, placeholder: "description" %>
          <br />
          <%= link_to "cancel", project_groups_path(@project, @groups), class: "btn btn-outline-secondary btn-sm" %>
          <%= f.submit "edit group", class: "btn btn-outline-secondary btn-sm", data: { disable_with: "editing group..." } %>
        <% end %>
      </div>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>
