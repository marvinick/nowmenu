<% @groups.each do |group| %>
  <% cache group do %>
    <div data-controller="delete">
      <div class="row">
        <div class="col-md-2 col-10">

        </div>
        <div class="col-md-8">
        <div class="card my-2 p-3 border-0 ">

            <h5 class="font-weight-bold mb-0"><%= group.name %></h5>
            <p class="description"><%= group.description %></p>
            <div class="pull-right">
              <p class="description mb-0"><i class="fas fa-pencil-alt"></i>  <%= link_to " edit", edit_project_group_path(@project, group) %></p>

              <p class="description mb-0"><i class="fa fa-trash"></i><%= link_to " delete", project_group_path(@project, group), method: :delete, remote: true, data: { target: "delete.link", action: "ajax:beforeSend->delete#click" } %></p>
            </div>
        

          <% if group.items.present? %>
            <% group.items.each do |item| %>

              <li><span><small class="font-weight-bold"><%= link_to item.title, project_item_path(@project, item) %></small></span></li>
            <% end %>
          <% else %>
            <small class="nothing-yet">it's not connected to any item yet</small>
            <li><%= link_to "go to items", project_items_path(@project, @items), class: "btn btn-outline-secondary btn-sm" %></li>

          <% end %>
        </div>
        </div>
        <div class="col-md-2 col-2">

        </div>
      </div>
    </div>

  <% end %>
<% end %>
