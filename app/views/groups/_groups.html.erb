<% @groups.each do |group| %>
  <% cache group do %>
    <div data-controller="delete">
      <div class="card py-3 px-3 border-0 shadow">
        <div class="row">
          <div class="col-md-8 col-10">
            <small class="font-weight-bold"><%= group.name %></small>

            <p class="description mb-0"><%= group.description %></p>
          </div>
          <div class="col-md-4 col-2">
            <p class="description mb-0"><i class="fas fa-pencil-alt"></i>  <%= link_to " edit", edit_project_group_path(@project, group) %></p>

            <p class="description mb-0"><i class="fa fa-trash"></i><%= link_to " delete", project_group_path(@project, group), method: :delete, remote: true, data: { target: "delete.link", action: "ajax:beforeSend->delete#click" } %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
