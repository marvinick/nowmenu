<li >
  <span class="glyphicon glyphicon-edit"></span>
  <small class="text-muted"><%= a.created_at.strftime('%H:%M:%S %-d %B %Y') %></small><br/>
  <strong><%= activity.owner ? activity.owner.email : 'Guest' %></strong>
  <% if a.trackable %>
    edited the item <strong><%= link_to a.trackable.title, project_item_path(@project, a.trackable) %></strong>
