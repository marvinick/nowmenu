
<div class="container mt-5">

  <div class="row ">
    <div class="col-md-2"></div>
    <div class="col-md-8">
    <small ><%= link_to "back to #{@item.title}", project_item_path(@project, @item), class: "btn btn-outline-secondary btn-sm" %></small>
    <br />
    <br />
    <div class="card p-5 shadow-sm">
      <div class="card mt-2 border-0">
        <div class="card-body">

          <div class="row">
            <div class="col-md-12">
              <div class="float-left">
                <h4 class="font-weight-bold"><%= each_review_average %> <%= image_tag "star-on" %></h4>
                <small>by <%= @review.user.email %></small>
              </div>
              <div class="float-right">
                <small><i class="fas fa-pencil-alt"></i><%= link_to "edit", edit_project_item_review_path(@project, @item, @review) %></small> -
                <small><i class="fa fa-trash"></i><%= link_to "delete", project_item_review_path, :method => :delete, data: {confirm: "Are you sure?"} %></small>
              </div>

            </div>
          </div>

          <hr class="my-5" />

          <% @review.properties.each do |key, value| %>
            <div class="row mb-3 ">
              <div class="col-md-8">
                <small class="font-weight-bold"><%= key %></small>
              </div>
              <div class="col-md-4">
                <div class="star-rating" data-score= "<%= value %>" ></div>
              </div>
            </div>
          <% end %>

          <hr class="my-5" />

          <h6 class="font-weight-bold mt-5 mb-3">Public review</h6>

          <small><%= @review.public_review %></small>

          <br />
          <br />

          <h6 class="font-weight-bold ">Private review</h6>
          <small><%= @review.private_review %></small>

        </div>
        </div>
      </div>
    </div>
    <div class="col-md-2"></div>
  </div>
</div>


<script>
  $('.star-rating').raty({
    path: '/assets/',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    }
  });
  $('.star-rating').raty('reload')
</script>
