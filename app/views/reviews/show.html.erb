<div class="d-flex">
  <div class="col-xl-7 col-lg-12 col-md-12 col-sm-12 p-2 bd-highlight">
    <small><%= link_to "<< #{@item.title}", project_item_path(@project, @item) %></small>
  </div>
</div>
<br />
<br />

<div class="d-flex bd-highlight justify-content-md-center align-items-center">

  <div class="col-xl-7 col-lg-12 col-md-12 col-sm-12 p-2 bd-highlight">
    <div class="card mb-5  ">
      <div class="card-body p-5">

        <%= link_to project_item_path(@project, @item) do %>
          <h6><i class="fas fa-arrow-left"></i></h6>
        <% end %>
        <div class="text-center">
          <p><%= @review.private_review %></p>
          <p><%= @review.public_review %></p>
          <small><%= link_to "edit", edit_project_item_review_path(@project, @item, @review) %></small>
          <small><%= link_to "delete", project_item_review_path, :method => :delete, data: {confirm: "Are you sure?"} %></small>
        </div>
        <br />
        <br />
        <% @review.properties.each do |key, value| %>
            <small><%= key %></small> <div class="star-rating" data-score= <%= value %>" ></div>
        <% end %>
      </div>
    </div>
  </div>
</div>
