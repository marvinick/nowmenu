<div class="container mt-5">
  <div class="row">

      <% @reviews.each do |review| %>
        <div class="col-md-1"></div>
        <div class="col-md-10">

          <h4><%= link_to "reviews for #{@item.title}", project_item_path(@project, @item) %></h4>
          <div class="card py-5 px-3 mt-5">
            <%= link_to project_item_review_path(@project, @item, review) do %>
              <%= review.public_review %>
              <br />
              <small>by <%= review.user.email %></small>
            <% end %>
            <hr />
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
