<%= render "projects/project_navbar" %>

<div class="container">


  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
      <div class="row mb-5">
        <div class="col-md-6">
          <small><%= link_to "exit",  project_faqs_path(@project, @faqs), class: "btn btn-outline-secondary btn-sm" %></small>
        </div>
      </div>
      <div class="card p-4 shadow border-0">
        <p class="description font-weight-bold"><%= @faq.ask %></p>
        <p class="description"><%= @faq.answer %> </p>
          <small><%= link_to "edit", edit_project_faq_path(@project, @faq) %> - <%= link_to "delete", project_faq_path(@project, @faq), :method => :delete, data: {confirm: 'Are you sure?'} %> </small>
      </div>
    </div>
    <div class="col-md-1"></div>
  </div>
</div>
